/* components/search/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  background-color: #fff;
  position: fixed;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  width: 750rpx;
  align-items: center;
  padding-top: 20rpx;
  z-index: 99;
}

.search-container {
  border-radius: 50rpx;
  background-color: #f5f5f5;
  display: inline-flex;
  align-items: center;
  margin-left: 20rpx;
}

.in-bar {
  columns: #999;
}

.icon {
  width: 30rpx;
  margin-left: 24rpx;
  height: 30rpx;
}

.bar {
  display: inline-block;
  height: 68rpx;
  font-size: 28rpx;
  width: 480rpx;
  margin-left: 16rpx;
}

.cancel-img {
  width: 30rpx;
  margin-right: 20rpx;
  height: 30rpx;
}

.cancel {
  width: 128rpx;
  line-height: 68rpx;
  border: none;
  text-align: center;
  display: inline-block;
}

.chunk {
  height: 15px;
  width: 5px;
  background-color: #000;
  display: inline-block;
  margin-right: 10px;
}

.title {
  line-height: 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* margin-left:100px; */
}

.history {
  width: 690rpx;
  margin: 40rpx 0 20rpx 0;
  display: flex;
  font-size: 28rpx;
  margin-top: 160rpx;
  flex-direction: column;
}

.hot-search {
  margin-top: 70rpx;
}

.loading {
  margin: 50rpx 0 50rpx 0;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.empty-tip {
  position: absolute;
  top: 50%;
  text-align: center;
}

.tags {
  /* padding-left:15px; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* justify-content: flex-start;  */
  margin-top: 24rpx;
  padding-left: 15px;
  width: 630rpx;
}

.tags v-tag {
  margin-right: 10px;
  margin-bottom: 10px;
  /* padding-bottom: 10px; *//* margin-right:6px; */
}

.test {
  background-color: #000;
}

.books-container {
  width: 570rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
}

.books-container v-book {
  margin-bottom: 25rpx;
}
