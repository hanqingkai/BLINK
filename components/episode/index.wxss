.container {
    display: inline-flex;
    flex-direction: row;
    height: 60rpx;
}

.container .index-container {
    display: flex;
    align-items: baseline;
}


/* no. */

.container .index-container .plain {
    font-size: 32rpx;
}


/* 08 */

.container .index-container .index {
    font-size: 60rpx;
    line-height: 60rpx;
    margin-right: 14rpx;
    font-weight: bold;
}


/* | */

.container .index-container .line {
    margin-right: 14rpx;
    height: 44rpx;
    border: 1rpx solid #000;
}

.container .date-container {
    margin-top: 5rpx;
    display: flex;
    flex-direction: column
}


/* 八月 */

.container .date-container .month {
    font-size: 24rpx;
    line-height: 24rpx;
}


/* 2019 */

.container .date-container .year {
    font-size: 24rpx;
    line-height: 24rpx;
}