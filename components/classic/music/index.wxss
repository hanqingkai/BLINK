/* components/classic/music/index.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center
}

.container .classic-img {
    width: 422rpx;
    border-radius: 50%;
    height: 422rpx;
    margin-top: 60rpx;
}

.container .player-img {
    width: 120rpx;
    height: 120rpx;
    position: relative;
    bottom: 270rpx;
}

.container .tag {
    width: 46rpx;
    height: 142rpx;
    align-self: flex-start;
    position: relative;
    margin-left: 40rpx;
    bottom: 58rpx;
}

.container text {
    font-size: 36rpx;
    max-width: 550rpx;
}

.rotation {
    -webkit-transform: rotate(360deg);
    animation: rotation 12s linear infinite;
    -moz-animation: rotation 12s linear infinite;
    -webkit-animation: rotation 12s linear infinite;
    -o-animation: rotation 12s linear infinite;
}

@-webkit-keyframes rotation {
    from {
        -webkit-transform: rotate(0edg);
    }
    to {
        -webkit-transform: rotate(360deg);
    }
}