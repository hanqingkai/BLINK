/* components/book/index.wxss */

.container {
    width: 240rpx;
    height: 360rpx;
    display: flex;
    position: relative;
    flex-direction: column;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.container image {
    width: 100%;
    height: 100%;
}

.container .description {
    width: 216rpx;
    display: flex;
    position: absolute;
    bottom: 0;
    background-color: white;
    flex-direction: column;
    padding: 5rpx 10rpx 8rpx 15rpx;
    font-size: 24rpx;
    border-bottom-right-radius: 2rpx;
    border-bottom-left-radius: 2rpx;
}

.container .title {
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.container .author {
    color: #999;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.container .foot {
    display: flex;
    font-size: 20rpx;
    justify-content: flex-end
}

.container .foot .footer {
    color: #666;
}