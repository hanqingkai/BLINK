.container {
    display: flex;
    width: 100%;
    flex-direction: column;
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    width: 100%;
    border-top: 2rpx solid #f5f5f5;
    border-bottom: 2rpx solid #f5f5f5;
}

.episode {
    margin-left: 30rpx;
    margin-top: 4rpx;
}

.like {
    margin-top: 6rpx;
    margin-right: 30rpx;
}

.navi {
    position: absolute;
    bottom: 50rpx;
    align-self: center;
}

.like-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-right: 30rpx;
}

.share-btn {
    margin-top: 28rpx;
    margin-left: 10rpx;
}

.share {
    width: 40rpx;
    height: 40rpx;
}