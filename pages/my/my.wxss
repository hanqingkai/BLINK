.container {
    display: flex;
    width: 100%;
    align-items: center;
    flex-direction: column;
}

.bg {
    width: 100%;
    height: 574rpx;
}

.about-container {
    display: flex;
    position: absolute;
    top: 440rpx;
    width: 100%;
    flex-direction: row;
    justify-content: space-around;
}

.about-us {
    display: flex;
    flex-direction: column;
    justify-content: space-between
}

.about-us image {
    width: 34rpx;
    height: 34rpx;
    align-self: center;
}

.description {
    font-size: 24rpx;
    color: #999;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}

.avatar-position {
    position: absolute;
    top: 266rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.study {
    right: 40rpx;
    top: 40rpx;
    position: absolute;
    width: 80rpx;
    height: 80rpx;
}

.count {
    color: #111;
    font-size: 30rpx;
    align-self: center;
}

.like-container {
    background-color: #f5f5f5;
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.headline {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    height: 42rpx;
    width: 97rpx;
}

.preview-container {
    padding: 0 30rpx;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
}

.preview {
    margin-bottom: 30rpx;
}