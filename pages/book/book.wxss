/* pages/book/book.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.container .header {
    width: 100%;
    display: flex;
    height: 100rpx;
    position: fixed;
    background-color: #fff;
    border-top: 1px solid #f3f3f3;
    border-bottom: 1px solid #f3f3f3;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 3px 0 #e3e3e3;
    z-index: 99;
}

.container .header .box {
    height: 68rpx;
    display: flex;
    background-color: #f5f5f5;
    border-radius: 50rpx;
    width: 700rpx;
    align-items: center;
    flex-direction: row;
    justify-content: center;
}

.box image {
    margin-right: 10rpx;
    margin-bottom: -2rpx;
    width: 14px;
    height: 14px;
}

.box text {
    margin-left: 10rpx;
    font-size: 26rpx;
    color: #999;
}

.container .sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: 100rpx;
}

.container .sub-container .head-img {
    width: 106rpx;
    height: 34rpx;
    margin-top: 40rpx;
}

.book-container {
    display: flex;
    margin-top: 30rpx;
    flex-wrap: wrap;
    flex-direction: row;
    padding: 0 90rpx 0 90rpx;
    justify-content: space-between;
}

.book-container v-book {
    margin-bottom: 30rpx;
}